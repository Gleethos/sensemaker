<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.embed.swing.* ?>
<?import javafx.geometry.* ?>

<fx:root
        type="javafx.scene.layout.Pane"
        onScroll="#onScroll"
        onSwipeDown="#onSwipe"
        onSwipeLeft="#onSwipe"
        onSwipeRight="#onSwipe"
        onSwipeUp="#onSwipe"
        onTouchMoved="#onTouchMoved"
        onTouchPressed="#onTouchPressed"
        onTouchReleased="#onTouchReleased"
        onMouseDragged="#onDrag"
        styleClass="mainFxmlClassUnselected"
        xmlns:fx="http://javafx.com/fxml"

>
    <stylesheets>
        <URL value="@style/PictureStyle.css"/>
    </stylesheets>
    <BorderPane>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <top>
            <HBox
                    fx:id="picture_buttons"
            >
                <padding><Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/></padding>
                <Button
                    id="closeBtn"
                    fx:id="closeBtn"
                    mnemonicParsing="false"
                    text="Close"
                />

            </HBox>
        </top>
        <center>
            <TabPane>
                <Tab fx:id="tab1" id="tab1" text="Image">

                </Tab>
                <Tab fx:id="tab2" text="IPTC">
                    <fx:include fx:id="_iptc" source="IPTCGUI.fxml"/>
                </Tab>
                <Tab fx:id="tab3" text="EXIF">
                    <fx:include fx:id="_exif" source="EXIFGUI.fxml"/>
                </Tab>
                <Tab fx:id="tab4" text="Photographer">
                    <fx:include fx:id="_photographer" source="PhotographerGUI.fxml"/>
                </Tab>
            </TabPane>
        </center>

    </BorderPane>

</fx:root>