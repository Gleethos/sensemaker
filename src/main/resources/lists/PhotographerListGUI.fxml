<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sensemaker.gui.view.lists.PhotographerListView"
>
    <SplitPane
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
    >
        <AnchorPane>
            <VBox
                    fx:id="_tableBox"
                    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            >
            </VBox>
        </AnchorPane>
        <AnchorPane>
            <VBox>
                <HBox
                        style="-fx-padding: 10 10 10 10;"
                >
                    <TextField fx:id="_searchField" text="Any">

                    </TextField>
                    <Button
                            id="searchButton"
                            fx:id="_searchButton"
                            mnemonicParsing="false"
                            text="Search"
                    />
                    <Button
                            id="reloadButton"
                            fx:id="_reloadButton"
                            mnemonicParsing="false"
                            text="Reload"
                    />
                </HBox>

                <Label style="-fx-padding: 10 10 10 10;">Best Match:</Label>

                <fx:include fx:id="_photographer" source="../simple/PhotographerGUI.fxml"/>

            </VBox>
        </AnchorPane>
    </SplitPane>

</AnchorPane>
